{% extends 'base.html.twig' %}

{% block body %}

  <div class="md-form form-sm">
    {% if icon is defined %}
      <i class="{{ icon }} prefix"></i>
    {% endif %}

    {% if rows is defined %}
      <textarea id="{{ id }}" name="{{ id }}" class="md-textarea form-control" rows="{{ rows }}" style="margin-top: 40px"></textarea>
    {% else %}
      <input type="text" id="{{ id }}" name="{{ id }}" class="form-control form-control-sm" style="margin-top: 20px">
    {% endif %}

    <label for="{{ id }}">{{ label }}</label>
  </div>

{% endblock %}