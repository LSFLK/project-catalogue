{% block header %}
  <!-- Custom styles for this template -->
  <link href="{{ asset('css/navbar/index.css') }}" rel="stylesheet"/>
  <link href="{{ asset('css/navbar/nav_item.css') }}" rel="stylesheet"/>
  <link href="{{ asset('css/navbar/user.css') }}" rel="stylesheet"/>
  <link href="{{ asset('css/navbar/user_dropdown.css') }}" rel="stylesheet"/>
  <link href="{{ asset('css/navbar/user_dropdown_item.css') }}" rel="stylesheet"/>

  <nav class="navbar navbar-expand-lg navbar-dark navbar-container">

    <a href="{{ path('home') }}" class="brand">
      <img src="{{ asset('icons/ospc-logo.png') }}" class="logo" >
      <div class="name">Open Source Project Catalogue</div>
    </a>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ml-auto">
        {{ include('navbar/nav_item.html.twig', { 'name': 'Home', 'path': path('home') }) }}
        {{ include('navbar/nav_item.html.twig', { 'name': 'Projects', 'path': path('projects') }) }}
        {{ include('navbar/nav_item.html.twig', { 'name': 'About', 'path': path('projects') }) }}

        {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
          <div class="btn-group">
            <div class="nav-item-container dropdown">
              <a class="nav-link" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fas fa-ellipsis-v"></i>
              </a>
              {{ include('navbar/dropdown.html.twig') }}
            </div>
          </div>
        {% endif %}

        {{ include('navbar/user.html.twig') }}
      </ul>
    </div>

  </nav>

  {{ include('send_feedback/index.html.twig') }}
{% endblock %}